<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nakoleni">
    <ScrollView
        android:layout_width="376dp"
        android:layout_height="695dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/button16"
                android:layout_width="103dp"
                android:layout_height="51dp"
                android:layout_gravity=""
                android:onClick="mofrin"
                android:text="Назад" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="270dp"
                android:layout_height="468dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="4 подхода по 5 раз \n перерыв 2 минуты между подходами"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="362dp"
                android:layout_height="224dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="*Исходное положение – упор лёжа с согнутыми в локтях руками;\n
*Запястья расположены ровно под плечевыми суставами;\n
Статически напрягите пресс и, сокращая мышцы ягодиц, опуститесь на
колени, сохраняйте это напряжение;\n
Колени держите параллельно друг к другу или скрестите в лодыжках;\n
На вдохе плавно опускайтесь, сгибая руки в локтях;\n
На выдохе плавно поднимайтесь, сохраняя напряжение пресса.
"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>