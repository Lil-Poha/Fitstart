<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otzimanie_s_oporoi">

    <ScrollView
        android:layout_width="372dp"
        android:layout_height="685dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/button13"
                android:layout_width="103dp"
                android:layout_height="51dp"
                android:layout_gravity=""
                android:onClick="mos"
                android:text="Назад" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="270dp"
                android:layout_height="468dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="4 подхода по 3 раза \n перерыв 2 минуты между подходами"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="376dp"
                android:layout_height="204dp"
                android:gravity="center"
                android:text="*Исходное положение – упор лёжа с согнутыми в локтях руками;\n
*Руки на ширине плеч, локти направлены под углом 45-50° от туловища;\n
*На вдохе плавно опускайтесь, сгибая руки в локтях;\n
*Следите за тем, чтобы спина была ровной;\n
*На выдохе плавно разгибайте локти."
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>